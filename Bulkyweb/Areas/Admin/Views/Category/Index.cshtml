@model List<Category>
<div class="card shadow border-0 ml-0 py-3">
	<div class="card-header bg-secondary bg-graient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center"></div>
			<h2 class="text-white text-center py-2">Categories</h2>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pt-4 pb-3">
			<div class="col-6">
				
			</div>
			<div class="col-6 text-end">
				<a asp-controller="Category" asp-action="Sage" class="btn btn-primary">Create New Category<i class="bi bi-file-plus"></i></a>
			</div>
		</div>

		<table class="table" table-bordered table-striped>
			<thead>
				<tr>
					<th>
						Category Name
					</th>
					<th>
						Display Order
					</th>
					<th>Edit</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var obj in Model)
				{
					<tr>
						<td>@obj.Name</td>
						<td>@obj.DisplayOrder</td>
						<td>
							<div class="w-75 btn-group" role="group">
								<a asp-controller="Category" asp-route-id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
									<i class="bi bi-pencil-square"></i> Edit
								</a>
								<a asp-controller="Category" asp-route-id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
									<i class="bi bi-trash3"></i> Delete
								</a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
