@page
@model BulkywebRazor_temp.Pages.Categories.IndexModel

<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">
				Category Lister
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-page="/categories/sage" class="btn btn-primary">Create New Category object<i class="bi bi-file-plus"></i></a>
		</div>
	</div>

<table class="table" table-bordered table-striped>
	<thead>
	<tr>
		<th>
			Category Name
		</th>
		<th>
			Display Order
		</th>
		<th>Edit</th>
	</tr>
	</thead>
	<tbody>
		@foreach( var obj in Model.CategoryList)
		{
			<tr>
				<td>@obj.Name</td>
				<td>@obj.DisplayOrder</td>
					<td><div class="w-75 btn-group" role="group">
							<a asp-page="Categories/edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
								<i class="bi bi-pencil-square"></i> Edit
								</a>
							<a asp-page="Categories/delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
								<i class="bi bi-trash3"></i> Delete
							</a>
					</div></td>
			</tr>
		}
	</tbody>
</table>
</div>
